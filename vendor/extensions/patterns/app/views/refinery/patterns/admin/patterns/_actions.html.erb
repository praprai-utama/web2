<ul>
  <% if ::Refinery::Patterns::Admin::PatternsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.patterns_admin_patterns_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_patterns_admin_pattern_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Patterns::Admin::PatternsController.sortable? && ::Refinery::Patterns::Pattern.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Patterns"),
                 refinery.patterns_admin_patterns_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Patterns"),
                 refinery.patterns_admin_patterns_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
